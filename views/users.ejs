<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <% include shared/styles %>


    <title></title>

</head>
<body>


    <div class="container">
      <div class="row justify-content-center">
      </div>
        <h4>Users</h4>
        <table class="table" style="text-align:left;">
          <thead>
            <tr>
              <th>Id</th>
              <th>Email</th>
              <th>Username</th>
              <th>Company</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <%users.forEach(function(user){%>
            <tr>
              <td><%=user.id%></td>
              <td><%=user.email%></td>
              <td><%=user.username%></td>
              <td>
                <%if(user.company){%>
                  <%=user.company.name%>
                <%}else{%>
                  not assigned
                <%}%>
              </td>
              <td>
                <!-- <button class="btn btn-warning" value="<%=company.id%>">Edit</button> -->
                <button class="btn btn-danger delete" value="<%=user.id%>">Delete</button>
              </td>
            </tr>
              <%})%>
            <tr></tr>
          </tbody>
        </table>
        <div style="inline-block">
          <button class="btn btn-primary" data-toggle="modal" data-target="#addUser">
            + Add User
          </button>
        </div>
    </div>


    <div class="modal" id="addUser">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <form action="/user/create" method="POST">
            <div class="modal-header">
              <h5 class="modal-title" style="display:inline-block">Add User</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                  <input type="text" name="username" placeholder="username" class="form-control" required>
                </div>
                <div class="form-group">
                  <input type="password" name="password" placeholder="password" class="form-control" required>
                </div>
                <div class="form-group">
                  <input type="text" name="email" placeholder="email" class="form-control" required>
                </div>
                <div class="form-group">
                  <select name="company" class="form-control-personal">
                    <%company.forEach(function(comp){%>
                      <option value="<%=comp.id%>"><%=comp.name%></option>
                    <%})%>
                  </select>
                </div>
                
            </div>
            <div class="modal-footer">
              <button class="btn btn-primary" type="submit">Add</button>
              <button type="button" class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>


    
</body>
<% include shared/scripts %>
<script type="text/javascript">
  $(".delete").click(function(){
    var self = $(this);
    var id = self.val();
    $.ajax({
      url:"/user/delete",
      method:"POST",
      data:{
        id:id
      },
      success:function(data){
        console.log(data);
        self.parent().parent().remove();
      },
      err:function(data){
        console.log(data);
      }
    })
  })
</script>
</html>